{
    "name": "vue-pc-demo",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "rui-rkit serve",
        "build": "rui-rkit build",
        "lint": "rui-rkit lint"
    },
    "dependencies": {
        "axios": "^0.21.1",
        "iview": "^3.3.3",
        "vue": "^2.5.21",
        "vue-router": "^3.0.2",
        "vuex": "^3.0.1",
        "vuex-class": "^0.3.1"
    },
    "devDependencies": {
        "@angular/compiler": "^7.2.12",
        "@angular/core": "^7.2.12",
        "@vue/cli-plugin-babel": "^3.2.0",
        "@vue/cli-plugin-eslint": "^3.2.0",
        "@vue/cli-plugin-typescript": "^3.2.0",
        "@vue/cli-service": "^3.5.3",
        "@vue/eslint-config-typescript": "^3.2.0",
        "ajv": "^6.10.0",
        "babel-eslint": "^10.0.1",
        "codelyzer": "^4.5.0",
        "eslint": "^5.8.0",
        "eslint-plugin-vue": "^5.0.0-0",
        "md5": "^2.2.1",
        "node-sass": "^4.11.0",
        "sass-loader": "^7.1.0",
        "tslint": "^5.11.0",
        "typescript": "^3.1.1",
        "vue-property-decorator": "^7.0.0",
        "vue-template-compiler": "^2.5.21",
        "zone.js": "^0.8.29"
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "browser": true
        },
        "extends": [
            "plugin:vue/essential",
            "eslint:recommended",
            "@vue/typescript"
        ],
        "parserOptions": {
            "parser": "typescript-eslint-parser"
        },
        "rules": {
            "vue/no-parsing-error": [
                2,
                {
                    "x-invalid-end-tag": false
                }
            ],
            "no-console": "off"
        }
    },
    "postcss": {
        "plugins": {
            "autoprefixer": {}
        }
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not ie <= 8"
    ]
}
